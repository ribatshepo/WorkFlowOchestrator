{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "WorkflowPlatform": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "*** CONFIGURE IN USER SECRETS FOR DEVELOPMENT ***"
  },
  "WorkflowEngine": {
    "MaxConcurrentExecutions": 100,
    "DefaultTimeoutMinutes": 15,
    "RetryAttempts": 2,
    "EnableDetailedLogging": true
  },
  "Environment": "Development",
  "DetailedErrors": true,
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "https://localhost:3001"
    ]
  }
}
