{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "WorkflowPlatform": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "*** CONFIGURE IN USER SECRETS FOR DEVELOPMENT ***",
    "Redis": "localhost:6379"
  },
  "WorkflowEngine": {
    "MaxConcurrentExecutions": 100,
    "DefaultTimeoutMinutes": 15,
    "RetryAttempts": 2,
    "EnableDetailedLogging": true
  },
  "Jwt": {
    "Secret": "*** CONFIGURE IN USER SECRETS FOR DEVELOPMENT ***",
    "Issuer": "WorkflowPlatform.API.Dev",
    "Audience": "WorkflowPlatform.Client.Dev",
    "ExpirationInMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "https://localhost:3001",
      "http://localhost:8080",
      "https://localhost:8080"
    ]
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/workflows*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/workflow-executions*",
        "Period": "1m",
        "Limit": 50
      },
      {
        "Endpoint": "POST:/api/workflow-executions",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  },
  "Environment": "Development",
  "DetailedErrors": true
}
